pipeline {
    agent any
    tools {
        maven 'Maven'
    }
    
    stages{
        stage('Git checkout'){
            steps{
                script{
                    echo 'The github repository integrated succefully'
                }
            }
        }
        stage('Deploying Healthcare app on cluster'){
            steps{
                script{
                    echo 'Testing the Healthcare app by Seleniun test'
                    dir('Selenium'){
                        sh "java -jar healthcare-selenium-runnable.jar"
                        
                    }
                }
            }
        }

        

    }

}